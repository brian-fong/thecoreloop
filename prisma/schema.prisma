datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

  //url      = "mysql://root@localhost:3306/thecoreloop"

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String   @db.VarChar(255)
  lastName  String   @db.VarChar(255)
  birthday  DateTime @updatedAt
  bio       String
}

model Users {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  twitterHandle String?   @db.VarChar(255)
  googleHandle  String?  @db.VarChar(255)
  username  String   @db.VarChar(255)
  games Game[]

  @@unique([twitterHandle, googleHandle])
}

model Game {
  id              Int       @id @default(autoincrement())
  title           String
  //blockchain and thumbnail?
  description     String
  stage           String
  devStatus       DevStatus  
  genres           Genre[] @relation("GameGenre")
  upvote_count    Int @default(0)
  ownerId         Int?
  owner           Users? @relation(fields:[ownerId], references: [id])
}

model Genre {
  id Int @id @default(autoincrement())
  genre    Genre
  games Game[] @relation("GameGenre")
  @@id([games, genre])
  @@unique([games, genre])
}


enum Genre {
  MMORPG
  FPS
  RPG
}

enum DevStatus {
  FUNDRAISING
  INDEVELOPMENT
  ALPHA
  BETA
  LAUNCHED
}

