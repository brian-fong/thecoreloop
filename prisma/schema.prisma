datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/thecoreloop"
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String   @db.VarChar(255)
  lastName  String   @db.VarChar(255)
  birthday  DateTime @updatedAt
  bio       String
}

model Users {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  twitterHandle String?   @db.VarChar(255)
  googleHandle  String?  @db.VarChar(255)
  username  String   @db.VarChar(255)

  @@unique([twitterHandle, googleHandle])
  @@check((twitterHandle IS NOT NULL) OR (googleHandle IS NOT NULL))
}

model Game {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  stage           String 
  genre           String
  upvote_count    Int
  owner           Users
}

enum Genre {
  MMORPG
  FPS
  RPG
}

enum devStatus {
  FUNDRAISING
  INDEVELOPMENT
  ALPHA
  BETA
  LAUNCHED
}
