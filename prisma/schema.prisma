datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

  //url      = "mysql://root@localhost:3306/thecoreloop"

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String   @db.VarChar(255)
  lastName  String   @db.VarChar(255)
  birthday  DateTime @updatedAt
  bio       String
}

model Users {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  twitterHandle String?   @db.VarChar(255)
  googleHandle  String?  @db.VarChar(255)
  username  String   @db.VarChar(255)
  games Game[]

  @@unique([twitterHandle, googleHandle])
}

model Game {
  id              Int       @id @default(autoincrement())
  upvote_count    Int @default(0)
  title           String
  studio          String?
  thumbnail       String?
  blockchain      String?
  description     String?
  tagline         String?
  isTeam          Boolean @default(true)
  fundraising     String?
  links          String?
  genres          Genre[] @relation("GameGenre")
  gallery         String?
  stage           DevStatus  
  ownerId         Int?
  owner           Users? @relation(fields:[ownerId], references: [id])
}

model Genre {
  id       Int @id @default(autoincrement())
  genre    Genres
  games    Game[] @relation("GameGenre")
}


enum Genres {
  MMORPG
  FPS
  RPG
}

enum DevStatus {
  FUNDRAISING
  INDEVELOPMENT
  ALPHA
  BETA
  LAUNCHED
}

